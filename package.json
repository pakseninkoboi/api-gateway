{
  "name": "@proposals/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "serve:all": "nx run-many --target=serve --projects=users,proposals,gateway --parallel --maxParallel=100",
    "build:all": "nx run-many --target=build --projects=users,proposals,gateway --parallel --maxParallel=100",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod:users": "node dist/apps/users/main",
    "start:prod:proposals": "node dist/apps/proposals/main",
    "start:prod:gateway": "node dist/apps/gateway/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json",
    "pact:verify": "jest --reporters=jest-html-reporters"
  },
  "private": true,
  "dependencies": {
